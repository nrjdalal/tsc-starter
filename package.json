{
  "name": "tsc-starter",
  "version": "0.0.3",
  "description": "The only TypeScript starter you'll ever need",
  "license": "MIT",
  "author": {
    "name": "Neeraj Dalal",
    "url": "https://nrjdalal.com",
    "email": "admin@nrjdalal.com"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then simple-git-hooks; fi",
    "publish:latest": "NODE_ENV=production changeset publish"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "repository": "nrjdalal/tsc-starter",
  "homepage": "https://github.com/nrjdalal/tsc-starter#readme",
  "bugs": "https://github.com/nrjdalal/tsc-starter/issues",
  "keywords": [
    "boilerplate",
    "changesets",
    "commitlint",
    "lint-staged",
    "prettier",
    "simple-git-hooks",
    "starter",
    "template",
    "tsconfig",
    "tsup",
    "typescript",
    "npm"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/node": "^22.10.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
